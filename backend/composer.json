{
    "name": "ledgerflow/backend",
    "type": "project",
    "description": "LedgerFlow Platform Backend - Data Collection and Payment Management System",
    "keywords": ["clean-architecture", "payment-management", "data-collection"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "LedgerFlow\\Domain\\": "src/Domain/",
            "LedgerFlow\\Application\\": "src/Application/",
            "LedgerFlow\\Infrastructure\\": "src/Infrastructure/",
            "LedgerFlow\\Presentation\\": "src/Presentation/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "test": "echo 'Tests to be implemented'"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
