{
  "info": {
    "name": "KV API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "http://localhost:8000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\",\n  \"device\": \"postman\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var data=pm.response.json();",
              "pm.collectionVariables.set('token', data.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Me",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:8000/api/auth/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "List Users",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:8000/api/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "users"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Demo\",\n  \"email\": \"jane.demo@example.com\",\n  \"role\": \"user\",\n  \"attributes\": { \"department\": \"sales\" }\n}"
        }
      }
    },
    {
      "name": "Pull Sync",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:8000/api/sync",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "sync"]
        }
      }
    },
    {
      "name": "Push Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/sync",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "sync"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"op\": \"create\",\n  \"table\": \"users\",\n  \"payload\": {\n    \"name\": \"Sync Created\",\n    \"email\": \"sync.created@example.com\",\n    \"role\": \"user\"\n  }\n}"
        }
      }
    }
  ],
  "variable": [{ "key": "token", "value": "" }]
}
